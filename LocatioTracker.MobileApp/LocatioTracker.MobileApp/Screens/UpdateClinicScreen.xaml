<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocatioTracker.MobileApp.Screens.UpdateClinicScreen">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="{Binding ClinicName}" Text="{Binding ClinicName}"/>
            <Entry Placeholder="{Binding ClinicCity}" Text="{Binding ClinicCity}"/>
            <Button Clicked="UpdateClinicClicked" Text="Update Clinic Info"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>