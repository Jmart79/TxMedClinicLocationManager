<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationTracker.MobileApp.Views.NewClinicScreen">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Clinic Name" Text="{Binding ClinicName}"/>
            <Entry Placeholder="Clinic City" Text="{Binding ClinicCity}"/>
            <Button Text="Create clinic" Clicked="CreateClinicClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>